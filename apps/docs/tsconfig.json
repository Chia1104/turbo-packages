{
  "extends": [
    "@acme/tsconfig/nextjs.json"
  ],
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "theme.config.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
